---
import Layout from '../layouts/Layout.astro';
// Define the base URL and script data
const base = import.meta.env.BASE_URL;
const scriptFiles = [
    {
        title: "Episode 1",
        filename: "Living_with_the_Ghost_of_Sam_Ep6.pdf"
    },
    // Add more episodes here following the same format
];
---
<Layout title="TV Scripts">
    <main>
        <h1>TV Show Scripts</h1>
        <div class="scripts-grid">
            <div class="script-card">
                <h3>Episode 6</h3>
                <div class="button-container">
                    <a 
                        href="/living-with-the-ghost-of-sam/scripts/Living_with_the_Ghost_of_Sam_Ep6.pdf"
                        class="btn download-btn"
                        download="Living_with_the_Ghost_of_Sam_Ep6.pdf"
                        type="application/pdf"
                    > 
                        Download
                    </a>
                    <a 
                        href="/living-with-the-ghost-of-sam/scripts/Living_with_the_Ghost_of_Sam_Ep6.pdf"
                        class="btn view-btn"
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        View PDF
                    </a>
                </div>
            </div>
            <!-- Placeholder cards for future episodes -->
            {[...Array(11)].map((_, index) => (
                <div class="script-card">
                    <h3>Future Episode</h3>
                    <div class="button-container">
                        <button class="btn btn-disabled" disabled>
                            Download
                        </button>
                        <button class="btn btn-disabled" disabled>
                            View PDF
                        </button>
                    </div>
                </div>
            ))}
        </div>
    </main>
</Layout>
<style>
    main {
        margin: auto;
        padding: 2rem;
        max-width: 1400px;
        color: white;
    }
    h1 {
        font-size: 2.5rem;
        text-align: center;
        margin-bottom: 2rem;
    }
    h3 {
        margin: 0;
        padding-bottom: 1rem;
        text-align: center;
    }
    .scripts-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-template-rows: repeat(4, 1fr);
        gap: 2rem;
        padding: 1rem;
    }
    .script-card {
        background: rgba(255, 255, 255, 0.1);
        padding: 1.5rem;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        min-height: 150px;
    }
    .button-container {
        display: flex;
        gap: 1rem;
        justify-content: center;
        width: 100%;
    }
    .btn {
        display: inline-block;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 4px;
        text-decoration: none;
        border: none;
        cursor: pointer;
        font-size: 1rem;
        transition: background 0.2s;
    }
    .download-btn {
        background: #4CAF50;
    }
    .download-btn:hover {
        background: #45a049;
    }
    .view-btn {
        background: #2196F3;
    }
    .view-btn:hover {
        background: #1976D2;
    }
    .btn-disabled {
        background: #cccccc;
        color: #666666;
        cursor: not-allowed;
    }
</style>
