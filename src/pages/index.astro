---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Living with the Ghost of Sam">
    <div id="splash" class="splash-container">
        <div class="login-box">
            <h1>Welcome</h1>
            <div class="password-input">
                <label for="password">Professor Who?</label>
                <input type="password" id="password" />
            </div>
            <button id="submit-btn">Enter</button>
            <p id="error-message" class="error"></p>
        </div>
        <div id="image-box">
          <img src={`${import.meta.env.BASE_URL}images/SamImagesmall.jpg`} id="sam-image" />
        </div>
    </div>

    <main id="content" class="hidden">
        <h1>Living with the Ghost of Sam</h1>
        <div class="grid">
            <a href={`${import.meta.env.BASE_URL}/scripts`} class="card">
                <h2>Scripts</h2>
                <p>Access all TV show scripts in PDF format</p>
            </a>
            <a href={`${import.meta.env.BASE_URL}/documents`} class="card">
                <h2>Show Documents</h2>
                <p>Review evaluation materials and show proposals</p>
            </a>
            <a href={`${import.meta.env.BASE_URL}/bible`} class="card">
                <h2>Character Bible</h2>
                <p>Detailed character profiles and relationships</p>
            </a>
            <a href={`${import.meta.env.BASE_URL}/sam`} class="card ghost-card">
                <h2>Sam's Corner</h2>
                <p>Watch exclusive clips featuring Sam</p>
            </a>
            <a href={`${import.meta.env.BASE_URL}/about`} class="card">
                <h2>About the Writer</h2>
                <p>Writer biography and background</p>
            </a>
        </div>
    </main>
</Layout>

<script client:load>
    if (sessionStorage.getItem('authenticated')) {
        document.getElementById('splash').classList.add('hidden');
        document.getElementById('content').classList.remove('hidden');
    }

    function checkPassword() {
        const password = document.getElementById('password').value;
        if (password === 'Terguson') {
            sessionStorage.setItem('authenticated', 'true');
            window.location.href = `${import.meta.env.BASE_URL}selection`;
        } else {
            document.getElementById('error-message').textContent = 'Incorrect password';
        }
    }

    document.getElementById('submit-btn').addEventListener('click', checkPassword);
    document.getElementById('password').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            checkPassword();
        }
    });

    const imageBox = document.getElementById('image-box');

    function randomPosition() {
        const x = Math.floor(Math.random() * (window.innerWidth - imageBox.clientWidth));
        const y = Math.floor(Math.random() * (window.innerHeight - imageBox.clientHeight));
        return { x, y };
    }

    function moveImageBox() {
        const { x, y } = randomPosition();
        imageBox.style.transform = `translate(${x}px, ${y}px)`;
    }

    // Initialize first position immediately
    moveImageBox();
    
    // Debug image loading
    document.getElementById('sam-image').addEventListener('load', function() {
        console.log('Image loaded successfully');
        console.log('Image dimensions:', this.naturalWidth, 'x', this.naturalHeight);
    });

    document.getElementById('sam-image').addEventListener('error', function() {
        console.log('Failed to load image');
        console.log('Attempted image path:', this.src);
    });

    setInterval(moveImageBox, 3000);
    console.log('Image movement initialized');
</script>

<style>
    .splash-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: #13151a;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    .login-box {
        background: rgba(255, 255, 255, 0.1);
        padding: 2rem;
        border-radius: 8px;
        text-align: center;
        color: white;
    }

    .password-input {
        margin: 1rem 0;
    }

    .password-input label {
        display: block;
        margin-bottom: 0.5rem;
    }

    .password-input input {
        padding: 0.5rem;
        border-radius: 4px;
        border: none;
        width: 100%;
        color: black;
    }

    .button-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .btn {
        display: inline-block;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 4px;
        text-decoration: none;
        border: none;
        cursor: pointer;
        font-size: 1rem;
        transition: background 0.2s;
        background: #2196F3;
    }

    .btn:hover {
        background: #1976D2;
    }

    .error {
        color: red;
        margin-top: 1rem;
    }

    .hidden {
        display: none;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin-top: 2rem;
    }

    .card {
        background: rgba(255, 255, 255, 0.1);
        padding: 1rem;
        border-radius: 8px;
        text-align: center;
        color: white;
        text-decoration: none;
    }

    .card h2 {
        margin: 0;
        font-size: 1.5rem;
    }

    .card p {
        margin: 0.5rem 0 0;
    }

    .ghost-card {
        border: 2px dashed #FFD700;
    }

   #image-box {
    position: absolute;
    width: 300px;
    height: 200px;
    transition: transform .5s ease-in-out;
    background: rgba(255, 255, 255, 0.1);
}
#sam-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}
</style>
