---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Select Your Role" showNavigation={false}>
    <h1>I am a .......</h1>
    <div class="button-container">
        <button id="agent" class="btn">Professional Agent</button>
        <button id="agency" class="btn">Agency</button>
        <button id="streaming" class="btn">Netflix, Amazon Prime, Disney+ or other</button>
        <button id="producer" class="btn">Producer</button>
        <button id="actor" class="btn">Actor looking for project</button>
    </div>
</Layout>

<script client:only>
    // Disable the browser's back button
    history.pushState(null, null, location.href);
    window.onpopstate = function () {
        history.go(1);
    };

    document.getElementById('agent').addEventListener('click', () => {
        window.location.href = `${import.meta.env.BASE_URL}/agent`;
    });
    document.getElementById('agency').addEventListener('click', () => {
        window.location.href = `${import.meta.env.BASE_URL}/agency`;
    });
    document.getElementById('streaming').addEventListener('click', () => {
        window.location.href = `${import.meta.env.BASE_URL}/streaming`;
    });
    document.getElementById('producer').addEventListener('click', () => {
        window.location.href = `${import.meta.env.BASE_URL}/producer`;
    });
    document.getElementById('actor').addEventListener('click', () => {
        window.location.href = `${import.meta.env.BASE_URL}/actor`;
    });
</script>

<style>
    .button-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .btn {
        display: inline-block;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        text-decoration: none;
        border: none;
        cursor: pointer;
        font-size: 1rem;
        background: linear-gradient(45deg, #2196F3, #21CBF3);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: background 0.3s, transform 0.2s, box-shadow 0.2s;
    }

    .btn:hover {
        background: linear-gradient(45deg, #21CBF3, #2196F3);
        transform: translateY(-3px);
        box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
    }

    .btn:active {
        transform: translateY(-1px);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: white;
        text-align: center;
    }
</style>
