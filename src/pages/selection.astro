import Layout from '../layouts/Layout.astro';
---

<Layout title="Select Your Role" showNavigation={false}>
    <div class="container">
        <h1 class="pulsing-text">I am a .......</h1>
        <div class="button-container">
            <a href="/roles/professional-agent" class="btn">Professional Agent</a>
            <button id="agency" class="btn">Agency</button>
            <button id="service" class="btn">Netflix-Amazon Prime-Disney+ or other</button>
            <button id="actor" class="btn">Actor Looking for a Script</button>
            <button id="producer" class="btn">Wealthy Producer</button>
            <button id="none" class="btn">None of the above</button>
        </div>
    </div>
</Layout>

