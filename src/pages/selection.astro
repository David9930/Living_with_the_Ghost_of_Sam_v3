---
import Layout from '../layouts/Layout.astro';

const base = import.meta.env.BASE_URL;
---
<Layout title="Select Your Role" showNavigation={false}>
    <div class="container">
        <h1 class="pulsing-text">I am a .......</h1>
        <div class="button-container">
            <a href={`${base}roles/professional-agent`} class="btn">Professional Agent</a>
            <a href={`${base}roles/agency`} class="btn">Agency</a>
            <a href={`${base}roles/streaming-service`} class="btn">Netflix-Amazon Prime-Disney+ or other</a>
            <a href={`${base}roles/actor`} class="btn">Actor Looking for a Script</a>
            <a href={`${base}roles/producer`} class="btn">Wealthy Producer</a>
            <a href={`${base}`} class="btn">None of the above</a>
        </div>
    </div>
</Layout>
<style define:vars={{ base }}>
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        min-height: 100vh;
        padding: 1rem;
        background: url(${base}/images/SamImage.jpg) no-repeat center center fixed;
        background-size: cover;
    }
    h1 {
        font-size: 4rem;
        margin-bottom: 2rem;
        color: white;
    }
    .pulsing-text {
        animation: pulse 2s infinite;
        color: white;
    }
    @keyframes pulse {
        0% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.1);
        }
        100% {
            transform: scale(1);
        }
    }
    .button-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: center;
    }
    .btn {
        padding: 1rem 2rem;
        font-size: 1.2rem;
        border: none;
        border-radius: 8px;
        background-color: #2196F3;
        color: white;
        cursor: pointer;
        transition: transform 0.2s, background-color 0.2s;
        min-width: 200px;
        text-decoration: none;
        text-align: center;
        display: inline-block;
    }
    .btn:hover {
        transform: translateY(-2px);
        background-color: #1976D2;
    }
</style>
